# FastAPI Configuration
API_TITLE=FileSmile API
API_VERSION=2.0.0
API_PREFIX=/api/v1
DEBUG=True

# Priority ERP Configuration (DEPRECATED - now tenant-specific)
# These are only used for development/seeding scripts

# Authentication Configuration
# Secret key for legacy API key generation (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_EXPIRE_DAYS=365

# Multi-Tenant JWT Authentication (NEW)
# JWT secret key for user tokens (generate with: openssl rand -hex 32)
# IMPORTANT: Use a DIFFERENT key from SECRET_KEY for security
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_EXPIRE_MINUTES=1440

# Encryption key for sensitive data (ERP credentials)
# Generate with: openssl rand -hex 32
# IMPORTANT: Keep this key secure and backed up - lost key means lost credentials!
ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# Database (REQUIRED for multi-tenant architecture)
# Production (Render): postgresql://user:password@host:5432/filesmile
# Development: sqlite:///./filesmile.db
DATABASE_URL=sqlite:///./filesmile.db

